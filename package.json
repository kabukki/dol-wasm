{
  "name": "@kabukki/wasm-chip8",
  "version": "1.5.0",
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "back:build": "cd backend && wasm-pack build --profiling --target web --out-name index",
    "back:watch": "cd backend && cargo watch -i pkg -s 'wasm-pack build --profiling --target web --out-name index'",
    "front:build": "esbuild frontend/index.tsx --bundle --outdir=dist --sourcemap --format=esm --loader:.png=dataurl --loader:.wasm=dataurl --external:react",
    "front:watch": "esbuild frontend/index.tsx --bundle --outdir=dist --sourcemap --format=esm --loader:.png=dataurl --loader:.wasm=dataurl --external:react --watch",
    "build": "npm run back:build && npm run front:build",
    "watch": "concurrently -c red.bold,yellow.bold -n back,front npm:back:watch npm:front:watch",
    "prepack": "npm run build"
  },
  "dependencies": {
    "game-stats": "^0.1.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.43",
    "concurrently": "^7.0.0",
    "esbuild": "^0.13.15"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  }
}
